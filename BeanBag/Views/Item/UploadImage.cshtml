<form method="post" enctype="multipart/form-data" asp-action="UploadImage" asp-controller="Item">
    <div class="border p-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <input type="file" class="btn-secondary" name="file"/>
                    </div>
                    <div class="col-4">
                        <input type="submit" value="Upload" class="btn btn-success"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

