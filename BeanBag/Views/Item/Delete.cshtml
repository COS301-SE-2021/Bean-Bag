@model Item
@using Microsoft.Extensions.Options
@using Microsoft.Identity.Web
@inject IOptions<MicrosoftIdentityOptions> azureAdb2COptions
@{
       Layout = null;
}

<div class="modal-body ">
                      
                       <div class="form-group">
                           
    <div class="text-muted"> Are you sure that you want to delete this item? </div>
                           <div class="about-product text-center mt-2">
                                 <input asp-for="Id" hidden />
                               <img alt="Item Image" src="@Model.imageURL" width="150" class="p-3">
                               <div>
                                   <h5>@Model.name </h5>
                                   <h6 class="text-muted"><i class="fas fa-tag"> </i> ITEM ID: @Model.Id</h6>
                               </div>
                           </div>
                              <hr>
                           <div class="stats mt-2">
                               <div class="d-flex justify-content-between p-price"><span>Inventory Name</span><span>@Model.Inventory.name</span></div>
                               <div class="d-flex justify-content-between p-price"><span>Inventory ID</span><span>@Model.Inventory.Id</span></div>
                               <div class="d-flex justify-content-between p-price"><span>Detected Category</span><span>@Model.type</span></div>
                               <div class="d-flex justify-content-between p-price"><span>Price</span><span>R @Model.price </span></div>
                               <div class="d-flex justify-content-between p-price"><span>Quantity</span><span>@Model.quantity</span></div>
                               <div class="d-flex justify-content-between p-price"><span>Entry Date</span><span>@Model.entryDate</span></div>
                               @if (@Model.isSold)
                               {
                                   <div class="d-flex justify-content-between p-price"><span>Status</span><span>Sold</span></div>
                                   <div class="d-flex justify-content-between p-price"><span>Date Sold</span><span>@Model.soldDate</span></div>
                                                                                                    
                               }
                               else
                               {
                                   <div class="d-flex justify-content-between p-price"><span>Status</span><span>In Stock</span></div>
                                                                                                    
                               }
                               <div class="d-flex justify-content-between p-price"><span>Condition</span><span> @Model.condition </span></div>
                               <div class="d-flex justify-content-between p-price"><span>Colour</span><span><i class="fas fa-square" style="color: @Model.colour"></i></span></div>
                           </div>    </div>
                       
                       
</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <input type="submit" class="btn btn-primary" value="Delete"/> <!--create button-->
                </div>

        <partial name="_ValidationScriptsPartial" />