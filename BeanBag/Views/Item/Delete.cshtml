@model Item

@using Microsoft.Extensions.Options
@using Microsoft.Identity.Web
@inject IOptions<MicrosoftIdentityOptions> _azureAdb2COptions

@{
    var options = _azureAdb2COptions.Value;
}


<section class="inventory d-flex align-items-center">
    <br/>
    <form method="post" asp-action="DeletePost" class="createForm">
        <input asp-for="Id" hidden/>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <h3>Delete Item</h3>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="type"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="inventoryId"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="name" disabled class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="type" disabled class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input asp-for="inventoryId" disabled class="form-control" value="@ViewBag.InventoryName"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-1" value="Delete"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-2">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</section>

