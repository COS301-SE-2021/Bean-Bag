@{
    Layout = "_Layout";
}

<section class="inventory d-flex justify-content-center">
    <div class="container justify-content-center">
        <div class="col-2"> </div>
        <div class="col-10">        
            <div class="card ">
                <h5 class="card-header">Website Theme</h5>
                <div class="card-body">
                    <h5 class="card-title">Pick theme colour</h5>
                    <div>
                        
                        <!--<input type="image" src="images/CornflowerBlue-default_theme.PNG"  name="Blue" width="40" height="40" id="CornflowerBlue" alt="Blue"/>

                        <input type="image" src="images/Fiery_Rose.png"  name="FieryRose" width="40" height="40" id="FieryRose" alt="FieryRose"/>

                        <input type="image" src="images/Green_Sheen.png"  name="GreenSheen" width="40" height="40" id="GreenSheen" alt="Green"/>

                        <input type="image" src="images/Outrageous_Orange.png"  name="OutrageousOrange" width="40" height="40" id="OutrageousOrange" alt="Orange"/>

                        <input type="image" src="images/Purple_Mountain_Majesty.png" name="Purple" width="40" height="40" id="Purple" alt="Purple"/>-->
                        <form method="post" asp-action="ChangeThemeColour" asp-controller="Appearance">
                            <!-- validate values--> 
                            <select name="theme">
                                <option value="">Select a theme</option>
                                <option value="FieryRose">Fiery Rose</option>
                                <option value="CornflowerBlue">Cornflower Blue</option>
                                <option value="GreenSheen">Green Sheen</option>
                                <option value="OutrageousOrange">Outrageous Orange</option>
                                <option value="PurpleMountainMajesty">Purple Mountain Majesty</option>
                            </select>
                            <input type="submit" value="Submit" />
                        </form>
                        
                        	<div class="ml-auto col-md-2">
                        		<a asp-controller="Appearance" asp-action="UploadLogo" class="btn btn-primary shadow-sm bg-body rounded" data-toggle="modal" data-target="#exampleModal3">Upload logo &nbsp;  &nbsp;  &nbsp; <i class="fa fa-plus"
                        		                                                                                                                                                 aria-hidden="true"></i></a> <!-- change button css---->
                        	</div>	
                        	<!---Popup Form to upload logo image -->
                            <div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModalTitle3" aria-hidden="true">
                                <div class="modal-dialog modal-dialog" role="document">
                                        
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title"  id="exampleModalTitle3">Upload logo</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                                
                                        <form method="post"  enctype="multipart/form-data" asp-action="UploadLogo" asp-controller="Appearance" >
                                            <div class="modal-body">
                                                <div class="form-group ">
                                                      
                                                 
                                                    <!-- Upload image input-->
                                                    <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                                                        <input id="upload" type="file" name="file" onchange="readURL(this);" class="form-control border-0">
                                                        <label id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                                                        <div class="input-group-append">
                                                            <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                                                        </div>
                                                    </div>
                            
                                                    <!-- Uploaded image area-->
                                                    <p class="font-italic text-grey text-center">The image uploaded will be rendered inside the box below.</p>
                                                    <div class="image-area mt-4 align-content-center"><img id="imageResult" src="#" alt="" class="img-fluid rounded shadow-sm mx-auto d-block"></div>
                            
                                                </div>
                                                <div asp-validation-summary="All" class="text-danger"></div>
                                            </div>
                                                
                                            <div class="modal-footer ">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <input type="submit" class="btn btn-primary" value="Submit"/> <!--create button-->
                                            </div>
                                        </form>
                                                   
                                    </div>
                                </div>
                            </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
