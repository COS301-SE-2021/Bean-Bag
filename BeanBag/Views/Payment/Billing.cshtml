            <div data-aos="flip-left"
                 data-aos-easing="ease-in-back"
                 data-aos-delay="400"
                 data-aos-offset="0">
                <div class="card shadow p-1 mb-3 bg-body rounded-lg">
                    <div class="card-body">
                        <h5 class="text-muted ">Tenant Details</h5>
                        <div class="pt-1">
                            <ul class="list-unstyled spaced">
                                <li><i class="ace-icon fa fa-caret-right blue"></i>Street, City
                                </li>
                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i>Zip Code</li>
                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i>State, Country
                                </li>
                                                                  
                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i>
                                    Phone:
                                    <b class="red">111-111-111</b></li>
                                <li class="divider"></li>
                                                                  
                                <li>
                                    <i class="ace-icon fa fa-caret-right blue"></i>
                                    Paymant Info
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
                <!-- metric -->
            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 col-12">
        	    <div data-aos="flip-left"
        	         data-aos-easing="ease-in-back"
        	         data-aos-delay="600"
        	         data-aos-offset="0">
        		    <div class="card shadow p-1 mb-3 bg-body rounded-lg">
        			    <div class="card-body">
        				    <h5 class="text-muted ">Company Details </h5>
        				   <div class="pt-1">
                               <ul class="list-unstyled spaced">
                                   <li><i class="ace-icon fa fa-caret-right blue"></i>Street, City
                                       </li>
                                   <li>
                                       <i class="ace-icon fa fa-caret-right blue"></i>Zip Code</li>
                                   <li>
                                       <i class="ace-icon fa fa-caret-right blue"></i>State, Country
                                       </li>
                                                                  
                                   <li>
                                       <i class="ace-icon fa fa-caret-right blue"></i>
                                       Phone:
                                       <b class="red">111-111-111</b></li>
                                   <li class="divider"></li>
                                                                  
                                   <li>
                                       <i class="ace-icon fa fa-caret-right blue"></i>
