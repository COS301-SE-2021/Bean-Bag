@{
    ViewData["Title"] = "Login";
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BeanBag</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="LandingPage" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="LandingPage" asp-action="Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="LandingPage" asp-action="Signup">Signup</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="LandingPage" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">

        <h1>Login</h1>
        -> GO TO INDEX HOME ON SUCCESS:

        <a class="btn-dark" asp-controller="Home" asp-action="Index">[HomePage button]</a>

    </main>

    @using (Html.BeginForm("Login", "LandingPage", FormMethod.Post))
                {
    <input type="text" name="inputText" />
    <input type="submit" value="Generate QR" />

                }
    <hr />
    @if(ViewBag.QRCode != null)
                {
    <img src="@ViewBag.QRCode" style="width:200px; height:200px;" />    //source is the direct bitmap image being 'parsed'
                }

</div>


