
@{
    ViewData["Title"] = "Index";
}

<!--Preloader Start-->
<div class="preloader">
    <span> </span>
</div>

<header>

    <nav class="navbar navbar-expand-lg fixed-top navbar-shrink">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" asp-area="" asp-controller="LandingPage" asp-action="Index">Bean Bag</a>

            <!-- Toggler/collapsible Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <i class="fas fa-bars"> </i>
            </button>

            <!-- Navbar links add active thing on the link to the current that you're on... -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto">

                    @{
                        System.Diagnostics.Debug.Assert(User.Identity != null, "User.Identity != null");
                    }
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in | Sign up</a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </nav>
</header>


<!-- Landing Page Heading Text, Description and Animation...-->
<section class="landing-page home d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="landing-text ">
                    <h1>Inventory Management System Solution for your business</h1>
                    <p class="text-justify">
                        <b>Bean Bag</b> is an inventory management system that utilizes image recognition technology to optimize and bring forth a new approach to automate and accelerate item cataloging.
                    </p>
                </div>
            </div>
            <div class="col-md-1 ">

            </div>
            <div class="col-md-5 text-center">
                <div class="landing-img">
                    <!-- <div class="circle">

                    </div>-->
                    <img src="images/inventory.png" alt="inventory image" />
                    <!--<img src="images/inventory.webp" alt="inventory image" />-->
                </div>
            </div>
        </div>

    </div>

</section>

  <footer id="sticky-footer"  class="footer-copyright ">
        <!--class="border-top footer text-muted"-->
        <div class="container">
            &copy; 2021 - BeanBag by <a class="agile-link" href="https://www.agilebridge.co.za/">Agile Bridge </a>
