@section Scripts {

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript">
   
      $(document).ready(function ()
      {
          //Items available
          $.getJSON('/Home/ItemsAvailable/' , function (data) { 
                $('#itemsAvailable').text(data);       
              });
                    
           //Items sold
          $.getJSON('/Home/ItemsSold/' , function (data) { 
                 $('#itemsSold').text(data);       
            });
          
            //Items revenue
           $.getJSON('/Home/Revenue/' , function (data) { 
                $('#revenue').text("R" + data);       
            });
                    
            //Items Growth
            $.getJSON('/Home/SalesGrowth/' , function (data) { 
                 $('#growth').text(data +"%");       
             });
                      
         //Ajax function to get dashboard on dropdown (Recent Items)
         $("#InventoryDropDown").change(function () {
            
             var selected=  $("#InventoryDropDown Option:Selected");
             
              $('#inventory').text( selected.text());  
             //RecentItems
           $.getJSON('/Home/GetItems/' + selected.val(), function (data) { 
                     let items = '';  
                     $.each(data, function (i, item) {
                         if (i<4){
                        let x=i+1;
                         items += '<tr>'+
'                                      '+
'                                <td>'+x+'</td>'+
'                                <td>'+
'                                    <div class="m-r-10"><img src="'+item.imageURL+'" alt="user" class="rounded" width="95"></div>'+
'                                </td>'+
'                                <td>'+selected.text()+'</td>'+
'                                <td>'+item.name+'</td>'+
'                                <td>'+item.type+'</td>'+
'                                <td>'+item.quantity +'</td>'+
'                                <td>'+item.price+'</td>'+
''+
'                                <td>'+item.entryDate+'</td>'+
'                            </tr>';
	
                         }
                     });     
                     $('#recentItems').html(items);  
                 });
           
           //Chart card
            let inventoryid=selected.val();
                                          let totalItems=0;
                                          let items='';
                                          let otherTotal = 0;  
                                          let other=0;
                                          let item1='';
                                          let item2='';
                                          let item3='';
                                          var quantity1=0, quantity2=0, quantity3=0;
                                          let boxColor='';
                                          
                                       //Top 3 Items 
                                       $.getJSON('/Home/TopItems/' +  inventoryid + "/?nocache="+Math.random(), function (data) { 
                                            
                                           $.each(data, function (i, item) { //make if statement for colors
                                               
                                           if (i===0)
                                           {
                                               item1=item.type;
                                               quantity1= item.qsum;
                                               boxColor= "#5969ff";
                                           }else if (i===1 )
                                           {
                                               item2=item.type;
                                               quantity2= item.qsum;
                                               boxColor= "#ff407b";
                                           }else {
                                                item3=item.type;
                                                quantity3= item.qsum;
                                                boxColor= "#25d5f2";
                                           }
                                                       
                                               
                                               items += '<p>'+
                                            '                            <span class="fa-xs mr-1 legend-title"'+
                                             ' style="color:'+ boxColor +'" >'+
                                             '<i class="fa fa-fw fa-square-full"></i></span><span class="legend-text">'+item.type+'</span>'+
                                            '                            <span class="float-right">'+item.qsum+'</span>'+
                                            '                        </p>';
                                              otherTotal+=item.qsum; 
                                              totalItems=item.total;
                                            });
                                           //Other
                                           other=totalItems-otherTotal;
                                            
                                           if (other!==0){
                                             items += '<p>'+
                                                            '                            <span class="fa-xs mr-1 legend-title" style="color:#ffc750"><i class="fa fa-fw fa-square-full"></i></span><span class="legend-text"> Other </span>'+
                                                            '                            <span class="float-right">'+other+'</span>'+
                                                            '                        </p>';}
                                           $("#topItems").html(items);  
                                    //Total Items                    
                                  $.getJSON('/Home/TotalItems/' +  inventoryid  + "/?nocache="+Math.random(), function (data) {                  
                                                        $("#totalItems").text(data);
                                                        totalItems=data;
                                                                                
                                  //Chart
                                  if (totalItems!==0){
                                   let ctx = document.getElementById("total-sale").getContext('2d');
                                        new Chart(ctx, {
                                            type: 'doughnut',
                                    
                                            data: {
                                                labels: [item1, item2, item3, "Other"],
                                                datasets: [{
                                                    backgroundColor: [
                                                        "#5969ff",
                                                        "#ff407b",
                                                        "#25d5f2",
                                                        "#ffc750"
                                                    ],
                                                    data: [quantity1, quantity2, quantity3, other]
                                                }]
                                                
                                            },
                                            options: {
                                                 tooltips: {enabled: false},
                                                    hover: {mode: null},
                                                    showTooltips: false,
                                                    events: [],
                                                legend: {
                                                    display: false
                                    
                                                }
                                               
                                            }
                                    
                                        }); 
                                        }
                                  });  
                               });  
             })  
             
         
             
          //Ajax function to get dashboard on load
              var  selected=$("#InventoryDropDown Option:Selected");
              $('#inventory').text( selected.text());  
                          
           $.getJSON('/Home/GetItems/' + selected.val()  , function (data) { 
                     let items = '';  
                     $.each(data, function (i, item) {
                         if (i<4){
                        let x=i+1;
                         items += '<tr>'+
'                                      '+
'                                <td>'+x+'</td>'+
'                                <td>'+
'                                    <div class="m-r-10"><img src="'+item.imageURL+'" alt="user" class="rounded" width="95"></div>'+
'                                </td>'+
'                                <td>'+selected.text()+'</td>'+
'                                <td>'+item.name+'</td>'+
'                                <td>'+item.type+'</td>'+
'                                <td>'+item.quantity +'</td>'+
'                                <td>'+item.price+'</td>'+
''+
'                                <td>'+item.entryDate+'</td>'+
'                            </tr>';
	
                         }
                     });     
                     $('#recentItems').html(items);  
                 });  
                let inventoryid=selected.val();
                                   let totalItems=0;
                                   let items='';
                                   let otherTotal = 0;  
                                   let other=0;
                                   let item1='';
                                   let item2='';
                                   let item3='';
                                   var quantity1=0, quantity2=0, quantity3=0;
                                   let boxColor='';
                                   
                                //Top 3 Items 
                                $.getJSON('/Home/TopItems/' +  inventoryid + "/?nocache="+Math.random(), function (data) { 
                                     
                                    $.each(data, function (i, item) { //make if statement for colors
                                        
                                    if (i===0)
                                    {
                                        item1=item.type;
                                        quantity1= item.qsum;
                                        boxColor= "#5969ff";
                                    }else if (i===1 )
                                    {
                                        item2=item.type;
                                        quantity2= item.qsum;
                                        boxColor= "#ff407b";
                                    }else {
                                         item3=item.type;
                                         quantity3= item.qsum;
                                         boxColor= "#25d5f2";
                                    }
                                                
                                        
                                        items += '<p>'+
                                     '                            <span class="fa-xs mr-1 legend-title"'+
                                      ' style="color:'+ boxColor +'" >'+
                                      '<i class="fa fa-fw fa-square-full"></i></span><span class="legend-text">'+item.type+'</span>'+
                                     '                            <span class="float-right">'+item.qsum+'</span>'+
                                     '                        </p>';
                                       otherTotal+=item.qsum; 
                                       totalItems=item.total;
                                     });
                                    //Other
                                    other=totalItems-otherTotal;
                                     
                                    if (other!==0){
                                      items += '<p>'+
                                                     '                            <span class="fa-xs mr-1 legend-title" style="color:#ffc750"><i class="fa fa-fw fa-square-full"></i></span><span class="legend-text"> Other </span>'+
                                                     '                            <span class="float-right">'+other+'</span>'+
                                                     '                        </p>';}
                                    $("#topItems").html(items);  
                             //Total Items                    
                           $.getJSON('/Home/TotalItems/' +  inventoryid  + "/?nocache="+Math.random(), function (data) {                  
                                                 $("#totalItems").text(data);
                                                 totalItems=data;
                                                                         
                           //Chart
                           if (totalItems!==0){
                            let ctx = document.getElementById("total-sale").getContext('2d');
                                 new Chart(ctx, {
                                     type: 'doughnut',
                             
                                     data: {
                                         labels: [item1, item2, item3, "Other"],
                                         datasets: [{
                                             backgroundColor: [
                                                 "#5969ff",
                                                 "#ff407b",
                                                 "#25d5f2",
                                                 "#ffc750"
                                             ],
                                             data: [quantity1, quantity2, quantity3, other]
                                         }]
                                         
                                     },
                                     options: {
                                          tooltips: {enabled: false},
                                             hover: {mode: null},
                                             showTooltips: false,
                                             events: [],
                                         legend: {
                                             display: false
                             
                                         }
                                        
                                     }
                             
                                 }); 
                                 }
                           });  
                        });                      
        })
                 
 
       
    </script>
