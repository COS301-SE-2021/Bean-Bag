@using Microsoft.Extensions.Options
@using Microsoft.Identity.Web
@inject IOptions<MicrosoftIdentityOptions> _azureAdb2COptions

@{
    var options = _azureAdb2COptions.Value;
}

@{
    ViewData["Title"] = "Home Page";
}
<style type="text/css">.home-btn { }</style>

<header>

    <nav class="navbar navbar-expand-lg fixed-top navbar-shrink">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bean Bag</a>

            <!-- Toggler/collapsible Button -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <i class="fas fa-bars"> </i>
            </button>

            <!-- Navbar links add active thing on the link to the current that you're on... -->
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                     {
                         <li class="nav-item"><span class="navbar-toggler-icon"> Hello @User.Identity.Name</span>
                        </li>

                         @if (!string.IsNullOrEmpty(options.EditProfilePolicyId))
                         {
                             <li class="nav-item">
                                 <a class="nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="EditProfile">Edit Profile</a>
                             </li>
                         }

                         <li class="nav-item">
                             <a class="nav-link" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Logout</a>
                         </li>
                     }
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Home Page Heading Text, Description and Animation...-->
<section class="home d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6">
                <div class="content-item">
                    <div class="icon">
                        <img src="images/plus.svg" alt="add" class="filter-purple" />
                    </div>
                    <div class="fixmargin home-text text-center">
                        <p> Click on the button below in order to add an item to your inventory.</p>
                    </div>
                    <div class="home-btn text-center">
                        <a class="btn btn-1" asp-area="" asp-controller="QRCode" asp-action="Index"> Add item</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-1 col-md-1 ">

            </div>
            <div class="col-lg-5 col-md-5 text-center">

            </div>
        </div>

    </div>

</section>




