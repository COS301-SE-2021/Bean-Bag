@model Inventory
@using Microsoft.Extensions.Options
@using Microsoft.Identity.Web
@inject IOptions<MicrosoftIdentityOptions> azureAdb2COptions


<section class="inventory d-flex justify-content-center">
    <div class="col-1 "> </div>
    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <h3 >Delete Item</h3>
        </div>
        <div class="form-group row">
            <label asp-for="name"></label> <!--Inventory Name-->
            <input asp-for="name" disabled class="form-control" /> <!--input box-->
        </div>
        <input type="submit" class="btn btn-1" value="Delete"/> <!--create button-->

        <a asp-action="Index" class="btn btn-2">Back</a> <!--Back-->
    </form>
    

</section>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}